{
  "name": "lijiaqi-eval-tool",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "dev:server": "npm -w packages/server run dev",
    "dev:web": "npm -w packages/web run dev",
    "build": "npm -w packages/server run build && npm -w packages/web run build",
    "db:migrate": "npm -w packages/server run db:migrate",
    "db:seed": "npm -w packages/server run db:seed"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "typescript": "^5.7.0"
  }
}
